<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.himanshu.studydeforis.SignUpActivity"
    android:background="@drawable/loginactivity_backgroundimage"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_text_fields_mandatory"
        android:textColor="#D3D3D3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"

        />
    <EditText
        android:id="@+id/register_enter_name_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:textColorHint="#D3D3D3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#30000000"
        android:padding="10dp"
        />


    <EditText
        android:id="@+id/register_enter_email_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Email"
        android:textColorHint="#D3D3D3"
        android:layout_below="@+id/register_enter_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#30000000"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/register_enter_username_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:textColorHint="#D3D3D3"
        android:layout_below="@+id/register_enter_email_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#30000000"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/register_enter_password_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/register_enter_username_text"
        android:hint="Enter password"
        android:textColorHint="#D3D3D3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#30000000"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/register_confirm_password_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/register_enter_password_text"
        android:hint="Confirm password"
        android:textColorHint="#D3D3D3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#30000000"
        android:padding="10dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_confirm_password_text"
        android:text="@string/action_create_account"
        android:textColor="#FFFFFF"
        android:id="@+id/register_signin_button"
        android:onClick="onSignInButtonClick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginactivity_button"/>

</RelativeLayout>
